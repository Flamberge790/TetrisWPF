<Page x:Class="TetrisWPF.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TetrisWPF"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="800"
      MaxHeight="700" MaxWidth="800"
      Title="MainMenu">

    <Grid>
        <StackPanel x:Name="Menu" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Margin="0,200,0,0">
            <Button Style ="{StaticResource ButtonStyle}" Content="START"/>
            <Button Style ="{StaticResource ButtonStyle}" Content="SCOREBOARD"/>
            <Button Style ="{StaticResource ButtonStyle}" Content="EXiT"/>
        </StackPanel>

        <Image Source="Assets/logo2.png"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Width="200"
               Height="200"
               Margin="0,30,0,0"
               Grid.Row="0">
        </Image>
    </Grid>
</Page>
