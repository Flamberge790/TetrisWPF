    <Window.Background>
        <ImageBrush ImageSource="Assets/background2.png" Opacity="1"/>
    </Window.Background>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Canvas>
            <Ellipse Canvas.Left="-90" Canvas.Top="60" Height = "300" Width="300">
                <Ellipse.Fill>
                    <LinearGradientBrush Opacity="0.5">
                        <GradientStop Color="#f64f59" Offset="1.13"/>
                        <GradientStop Color="#8E54E9" Offset="0"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Canvas.Right="-180" Canvas.Top="400" Height = "350" Width="350">
                <Ellipse.Fill>
                    <LinearGradientBrush Opacity="0.5">
                        <GradientStop Color="#99fffd" Offset="0.15"/>
                        <GradientStop Color="#8E54E9" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
            </Ellipse>

            <Ellipse Canvas.Left="200" Canvas.Top="150" Height="1100" Width="300">
                <Ellipse.Fill>
                    <RadialGradientBrush Opacity="0.5">
                        <GradientStop Color="#4776E6" Offset="0.3"/>
                        <GradientStop Color="#111111" Offset="1"/>
                    </RadialGradientBrush>
                </Ellipse.Fill>
            </Ellipse>
        </Canvas>

        <StackPanel x:Name="Menu">
            <Image Source="Assets/logo2.png"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Width="200"
               Height="200"
               Margin="0,20,0,0"
               Grid.Row="0">
            </Image>
        </StackPanel>


