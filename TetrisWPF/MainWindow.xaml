<Window x:Class="TetrisWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisWPF"
        mc:Ignorable="d"
        Title="MainMenu" Height="700" Width="700"

        Foreground="Wheat"
        FontSize="34"
        KeyDown="Window_KeyDown">

    <Window.Background>
        <SolidColorBrush 
            Color="#8E54E9">
        </SolidColorBrush>
    </Window.Background>

    <Grid>

        <Ellipse HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="950" Width="300" Margin="0,0,0,-475">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#4776E6" Offset="0.3"/>
                    <GradientStop Color="#8E54E9" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse HorizontalAlignment="Center" VerticalAlignment="Top" Height = "700" Width="800" Margin="0,-560,0,0">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#f64f59" Offset="0.12"/>
                    <GradientStop Color="#8E54E9" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse HorizontalAlignment="Left" VerticalAlignment="Center" Height = "300" Width="300" Margin="-100,0,0,250">
            <Ellipse.Fill>
                <LinearGradientBrush>
                    <GradientStop Color="#f7ff00" Offset="1.13"/>
                    <GradientStop Color="#8E54E9" Offset="0"/>
                </LinearGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse HorizontalAlignment="Right" VerticalAlignment="Bottom" Height = "350" Width="350" Margin="0,0,-170,-80">
            <Ellipse.Fill>
                <LinearGradientBrush>
                    <GradientStop Color="#59C173" Offset="0.15"/>
                    <GradientStop Color="#8E54E9" Offset="1"/>
                </LinearGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Image Source="Assets/logo.png"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               Width="200"
               Height="200"
               Panel.ZIndex="1">
        </Image>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
    </Grid>
</Window>
